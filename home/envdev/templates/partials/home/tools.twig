        <div class="col-md-12 card shadow mb-4 p-0">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tools ({{ tools|length }})</h6>
            </div>
            <div class="card-body">
            {% for tool in tools %}
            <a href="{{ tool.url }}" class="btn btn-primary btn-icon-split" target="_blank">
                <span class="icon text-white-50 pt-2"><i class="fas {{ tool.icon }}"></i></span>
                <span class="text">{{ tool.name }}</span>
            </a>
            {% endfor %}
            </div>
        </div>
