#!/bin/sh

CURRENTPATH=$(dirname "${0}");
export $(grep -v '^#' $CURRENTPATH/../.env | xargs)
export USER_ID=$(id -u)
export GROUP_ID=$(id -g)

docker run \
    --rm \
    -i \
    --network=host \
    -v "$PWD":"$PWD":ro \
    -v $(realpath ~/.ssh):"/root/.ssh" \
    -v $(realpath ~/.ssh):"/home/vfac/.ssh" \
    -w $PWD \
    -u $USER_ID:$GROUP_ID \
    vfac/envdevjs:${PHP_VERSION} \
    tsc "$@"

exit $?